<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:smartFilterBar="sap.ui.comp.smartfilterbar"
    xmlns:smartTable="sap.ui.comp.smarttable"
>
    <Dialog
        id="selectDialog"
        title="Value Help"
        contentWidth="auto"
        contentHeight="auto"
        afterClose="onSelectDialogAfterClose"
    >
        <smartFilterBar:SmartFilterBar
            id="smartFilterBar"
            entitySet="{smartValueHelpModel>/EntitySet}"
            basicSearchFieldName="SalesContract"
            enableBasicSearch="true"
        />
        <smartTable:SmartTable
        smartFilterId="smartFilterBar"
            
            tableType="ResponsiveTable"
            editable="false"
            entitySet="{smartValueHelpModel>/EntitySet}"
            useVariantManagement="false"
            useTablePersonalisation="false"
            header="Products"
            showRowCount="true"
            useExportToExcel="false"
            enableAutoBinding="true"
            requestAtLeastFields="{smartValueHelpModel>/InitiallyVisibleFields}"
            initiallyVisibleFields="{smartValueHelpModel>/InitiallyVisibleFields}"
            enableAutoColumnWidth="true"
            beforeRebindTable="beforeGo"
        >
            <Table
                id="idPOSchedulePage_table0"
                growing="true"
                growingScrollToLoad="true"
                selectionChange="onPOListSelectionFromList"
                mode="SingleSelectLeft"
                sticky="ColumnHeaders,HeaderToolbar,InfoToolbar"
                
            />
        </smartTable:SmartTable>

        <beginButton>
            <Button
                text="Select"
                press=".onSelectValueHelp"
            />
        </beginButton>
        <endButton>
            <Button
                text="Cancel"
                press=".onCancelValueHelp"
            />
        </endButton>
    </Dialog>
</core:FragmentDefinition>
